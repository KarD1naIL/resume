<div class="card mb-3">
    <div class="col-12">
        <div class="nav nav-tabs">
            {{#with navigation}}
            {{#each links}}
            {{#if @last}}
            <div class="nav-item">
                <a href="{{href}}" class="btn btn-disabled">{{text}}</a>
            </div>
            {{else}}
            <div class="nav-item">
                <a href="{{href}}" class="btn btn-link">{{text}}</a>
            </div>
            {{/if}}
            {{/each}}
            {{/with}}
        </div>
    </div>
</div>